@inject IServicioSesion ServicioSesion
@inject NavigationManager Navegador
@if (ServicioSesion.GetUsuario() != null)
{

    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">SISTEMA GESTION EXPEDIENTES</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listaExpediente">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Gestionar Expedientes
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listaTramites">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>Gestionar Tramites
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="">
                    <span class="bi bi-list-nested-nav-menu" @onclick="()=> ServicioSesion.LogOut()"></span>Cerrar Sesion.
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <button class="btn btn-primary" @onclick="()=> CerrarSesion()">Cerrar Sesion</button>
            </div>
        </nav>
    </div>
}

@code {

    void CerrarSesion()
    {
        ServicioSesion.LogOut();
        Navegador.NavigateTo("/");
    }
}
